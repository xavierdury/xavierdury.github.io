<?xml version="1.0" encoding="UTF-8"?>
<fo:root xmlns:fo="http://www.w3.org/1999/XSL/Format">
	<fo:layout-master-set>
		<fo:simple-page-master master-name="A4">
			<fo:region-body margin="10mm"/>
		</fo:simple-page-master>
	</fo:layout-master-set>
	<fo:page-sequence master-reference="A4" font="11pt Calibri">
		<fo:flow flow-name="xsl-region-body">
			<fo:table table-layout="fixed" border-collapse="separate" border-spacing="2mm">
				<fo:table-column column-width="30mm"/>
				<fo:table-column column-width="100mm"/>
				<fo:table-column column-width="60mm"/>
				<fo:table-body>
					<fo:table-row>
						<fo:table-cell number-columns-spanned="2">
							<fo:block font-weight="bold" font-size="28pt">{{ site.data.cv_en.name }}</fo:block>
							<fo:block font-size="18pt">{{ site.data.cv_en.title }}</fo:block>
						</fo:table-cell>
						<fo:table-cell text-align="right">
							<fo:block><fo:basic-link external-destination="url('http://xavierdury.net/en/')" color="blue" text-decoration="underline">xavierdury.net</fo:basic-link></fo:block>
							<fo:block><fo:basic-link external-destination="url('mailto:jobs@xavierdury.net')" color="blue" text-decoration="underline">jobs@xavierdury.net</fo:basic-link></fo:block>
							<fo:block>+32-(0)486-535020</fo:block>
						</fo:table-cell>
					</fo:table-row>

					<fo:table-row>
						<fo:table-cell number-columns-spanned="3">
							<fo:block font-weight="bold" font-size="14pt" text-decoration="underline">Profile</fo:block>
						</fo:table-cell>
					</fo:table-row>
					<fo:table-row>
						<fo:table-cell number-columns-spanned="3" text-align="justify">
							<fo:block>{{ site.data.cv_en.profile }}</fo:block>
						</fo:table-cell>
					</fo:table-row>

					<fo:table-row>
						<fo:table-cell number-columns-spanned="3">
							<fo:block font-weight="bold" font-size="14pt" text-decoration="underline">Work experiences</fo:block>
						</fo:table-cell>
					</fo:table-row>
					{% for experience in site.data.cv_en.experiences %}
					<fo:table-row>
						<fo:table-cell number-columns-spanned="2">
							<fo:block text-decoration="underline">{{ experience.function }} @ {{ experience.company }}</fo:block>
						</fo:table-cell>
						<fo:table-cell>
							<fo:block font-style="italic" text-align="right">[{{ experience.start_date }}&#8212;{{ experience.end_date | default: 'today' }}]</fo:block>
						</fo:table-cell>
					</fo:table-row>
					{% for project in experience.projects %}
					<fo:table-row>
						<fo:table-cell>
							<fo:block font-weight="bold" text-align="right">{{ project.name }}</fo:block>
						</fo:table-cell>
						<fo:table-cell number-columns-spanned="2">
							<fo:block>{{ project.description }}</fo:block>
							<fo:block>{{ project.role }}</fo:block>
							<fo:block>{{ project.technologies }}</fo:block>
						</fo:table-cell>
					</fo:table-row>
					{% endfor %}
					{% endfor %}

					<fo:table-row>
						<fo:table-cell number-columns-spanned="3">
							<fo:block font-weight="bold" font-size="14pt" text-decoration="underline">Education</fo:block>
						</fo:table-cell>
					</fo:table-row>
					{% for study in site.data.cv_en.studies %}
					<fo:table-row>
						<fo:table-cell number-columns-spanned="3">
							<fo:block text-decoration="underline">{{ study.school}} {% if study.faculty %} ({{ study.faculty }}){% endif %}</fo:block>
						</fo:table-cell>
					</fo:table-row>
					{% for degree in study.degrees %}
					<fo:table-row>
						<fo:table-cell>
							<fo:block font-weight="bold" text-align="right">{{ degree.start_date }}{% if degree.end_date != nil %}&#8212;{{ degree.end_date }}{% endif %}</fo:block>
						</fo:table-cell>
						<fo:table-cell number-columns-spanned="2">
							<fo:block>{{ degree.title }}</fo:block>
						</fo:table-cell>
					</fo:table-row>
					{% endfor %}
					{% endfor %}

					<!--
					<fo:table-row>
						<fo:table-cell number-columns-spanned="3">
							<fo:block font-weight="bold" font-size="14pt" text-decoration="underline">Comp√©titions</fo:block>
						</fo:table-cell>
					</fo:table-row>
					{% for competition in site.data.cv_en.competitions %}
					<fo:table-row>
						<fo:table-cell number-columns-spanned="2">
							<fo:block text-decoration="underline">{{ competition.name }}</fo:block>
						</fo:table-cell>
						<fo:table-cell>
							<fo:block font-style="italic" text-align="right">[{{ competition.start_date }}&#8212;{{ competition.end_date }}]</fo:block>
						</fo:table-cell>
					</fo:table-row>
					{% for achievement in competition.achievements %}
					<fo:table-row>
						<fo:table-cell>
							<fo:block font-weight="bold" text-align="right">{{ achievement.rank }}</fo:block>
						</fo:table-cell>
						<fo:table-cell number-columns-spanned="2">
							<fo:block>{{ achievement.title }}</fo:block>
						</fo:table-cell>
					</fo:table-row>
					{% endfor %}
					{% endfor %}
				-->

					<fo:table-row>
						<fo:table-cell>
							<fo:block font-weight="bold" font-size="14pt" text-decoration="underline">Skills</fo:block>
						</fo:table-cell>
						<fo:table-cell number-columns-spanned="2">
							<fo:block text-align="right">
								expert<fo:inline font-size="7pt">***</fo:inline>
								advanced<fo:inline font-size="7pt">**</fo:inline>
								novice<fo:inline font-size="7pt">*</fo:inline>
							</fo:block>
						</fo:table-cell>
					</fo:table-row>
					{% for skill in site.data.cv_en.skills %}
					<fo:table-row>
						<fo:table-cell>
							<fo:block font-weight="bold" text-align="right">{{ skill.group }}</fo:block>
						</fo:table-cell>
						<fo:table-cell number-columns-spanned="2">
							<fo:block>
							{% for item in skill.items %}
								{% case item.level %}
									{% when "expert" %}
										{{ item.name }}<fo:inline font-size="7pt">***</fo:inline>{% if forloop.last == false %},{% endif %}
									{% when "advanced" %}
										{{ item.name }}<fo:inline font-size="7pt">**</fo:inline>{% if forloop.last == false %},{% endif %}
									{% when "novice" %}
										{{ item.name }}<fo:inline font-size="7pt">*</fo:inline>{% if forloop.last == false %},{% endif %}
									{% else %}
										{{ item.name }}{% if forloop.last == false %},{% endif %}
								{% endcase %}
							{% endfor %}
							</fo:block>
						</fo:table-cell>
					</fo:table-row>
					{% endfor %}

				</fo:table-body>
			</fo:table>
		</fo:flow>
	</fo:page-sequence>
</fo:root>
